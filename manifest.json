{
    "name": "淘宝订单信息 julian工具",
    "version": "0.0.1",
    "manifest_version": 2,

    "default_locale": "zh_CN",

    "description": "淘宝订单信息抓取 喵",
    "icons": {
        "16": "img/16.png",
        "48": "img/48.png",
        "128": "img/128.png"
    },

    "browser_action": {
        "default_icon": "img/16.png",
        "default_title": "JuLian工具助手",
        "default_popup": "pages/popup.html"
    },

    "background": {
        "persistent": true,
        "scripts": [          
            "js/background.js"
        ]
    },
    "options_page": "pages/option.html",

    "permissions": [
        "tabs",
        "storage",
        "contextMenus",
        "cookies",
        "notifications",
        "alarms",
        "webNavigation",
        "\u003Call_urls\u003E"
    ],   

    "content_scripts": [
        {
            "matches": [
                "*://buyertrade.taobao.com/*",
                "*://trade.tmall.com/detail/orderDetail.htm?*"         
            ],
            "js": [
               "libs/panli.js",
               "js/contentscript.js"
            ],
            "run_at": "document_end"
        }
    ]

}
